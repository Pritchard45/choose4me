  <% if favorite = current_user.favorite_for(@category) %>
    <%= link_to [@category, favorite], class: 'btn btn-danger', method: :delete do %>
    <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unfavorite
  <% end %>
<% else %>
  <%= link_to [@category, Favorite.new], class: 'btn btn-primary', method: :category do %>
    <i class="glyphicon glyphicon-star"> </i>&nbsp; Favorite
  <% end %>
<% end %>
