<h1> Edit Category </h1>

<div class="row">
  <div class="col-4-md">
    <p> Edit this Category </p>
  </div>
  <div class="col-md-8">
    <%= form_for @category do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter category title" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
