<h1> Add an Option! </h1>


<div class="row">
  <div class="col-md-4">
    <p> Create a custom Option </p>
  </div>
  <div class="col-md-8">
    <%= form_for [@category, @option] do |f| %>
      <div class="form-group"?
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter Option name" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter option discription" %>
      </div>
      <div class="form-group">
        <%= f.label :website %>
        <%= f.text_field :website, class: 'form-control', placeholder: "Enter URL" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save" %>
      </div>
    <% end %>
  </div>
</div>
